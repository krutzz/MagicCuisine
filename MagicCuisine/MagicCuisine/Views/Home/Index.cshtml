@model MagicCuisine.Models.HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron logo-container">
    <img id="logo-img" src="@Model.LogoImg" />
</div>

@{
    for (int i = 0; i < Model.Recipes.Count; i++)
    {
        <div class="col-md-4">
            <h2>@Model.Recipes[i].Title</h2>
            <p>
                @Model.Recipes[i].Description
            </p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">More</a></p>
        </div>
    }
}
